{
	"compilerOptions": {
		"rootDir": "./src",
		"target": "ES2020",
		"module": "ESNext",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"isolatedModules": true,
		"moduleResolution": "bundler",
		"useDefineForClassFields": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
