{
	"name": "@bdadmin/nestjs",
	"version": "1.0.0",
	"description": "is a toolkit designed to simplify the creation of administrative dashboards. It provides a set of decorators and utilities for defining DTOs, entities, fields, authentication flows, and more, using metadata to efficiently create and manage complex admin interfaces.",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": ["dist"],
	"bin": {
		"@bdadmin/nestjs": "./dist/cli/main.js"
	},
	"scripts": {
		"build": "rollup -c --bundleConfigAsCjs",
		"format": "biome format --write .",
		"lint": "biome lint --write .",
		"lint:fix": "biome lint --write --unsafe ."
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Backend-driven-Admin-Generator/bdadmin-nestjs.git"
	},
	"keywords": [
		"bdui",
		"nestjs",
		"config",
		"typescript",
		"decorators",
		"json",
		"restapi"
	],
	"author": "Kai Goldman",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/Backend-driven-Admin-Generator/bdadmin-nestjs/issues"
	},
	"homepage": "https://github.com/Backend-driven-Admin-Generator/bdadmin-nestjs#readme",
	"dependencies": {
		"ora": "^8.1.1",
		"reflect-metadata": "^0.2.2"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@rollup/plugin-commonjs": "^28.0.2",
		"@rollup/plugin-json": "^6.1.0",
		"@rollup/plugin-node-resolve": "^16.0.0",
		"@rollup/plugin-terser": "^0.4.4",
		"@rollup/plugin-typescript": "^12.1.2",
		"@types/node": "^22.10.5",
		"commander": "^13.0.0",
		"glob": "^11.0.1",
		"rollup": "^4.30.1",
		"rollup-plugin-dts": "^6.1.1",
		"tslib": "^2.8.1",
		"typescript": "^5.7.3"
	},
	"publishConfig": {
		"access": "public"
	}
}
